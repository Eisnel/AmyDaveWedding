@model AmyDaveWedding.Models.ManageUserViewModel

<h4>Create Local Login</h4>
<p class="text-info">
    You don't have a local username/password for this site.
    You don't need this, your social login is perfectly adequate.
    But if you'd like to log in without an external login
    then give your account a password here.
</p>

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <hr class="hidden-xs" />
    @Html.ValidationSummary()
    <div class="form-group">
        <label class="col-md-5 control-label">Username</label>
        <div class="col-md-7">
            <p class="form-control-static">@ViewBag.Username</p>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-5 control-label" })
        <div class="col-md-7">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label" })
        <div class="col-md-7">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-5 col-md-7">
            <input type="submit" value="Set password" class="btn btn-default" />
        </div>
    </div>
}
