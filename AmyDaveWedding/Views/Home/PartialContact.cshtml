@{
    // Layout = null;
    
    string venueBootstrapClasses;
    if (ViewBag.Invitee != null && ViewBag.Invitee.InvitedToRehearsal)
    {
        venueBootstrapClasses = "col-sm-6 col-md-5 col-md-offset-1";
    }
    else
    {
        venueBootstrapClasses = "col-sm-12 col-md-9 col-md-offset-1";
    }
}

<div>
    <a id="venue"></a>
</div>

<!-- start: contact -->
<div class="contact">
    <div class="container">

        <div class="page-header">
            <h1>Location</h1>
        </div>
        
        <div class="row first-row">
            <div class="wedding-venue @venueBootstrapClasses element">

                <h3>Ceremony &amp; Reception Venue</h3>

                <p>
                    Solera Cocina de Espana is located in downtown Minneapolis, on the corner of Hennepin Ave and 9th Street.
                    The first floor houses a well-regarded Spanish &ldquo;tapas&rdquo; restaurant.
                    Our ceremony will be on the rooftop, followed by a cocktail reception in the &ldquo;Barcelona Room&rdquo; on the second floor.
                    Look for the event entrance near the main entrance on Hennepin Ave.
                </p>

                <div class="row">
                    <div class="map-thumb">
                        <a href='@Html.Raw("https://goo.gl/maps/A3n2Q")'>
                            <img class="img-map-thumb" src="~/Images/map_1.jpg" alt="" />
                        </a>
                    </div>
                    <div class="info-box Xcol-xs-7">
                        <div class="address">
                            <a href='@Html.Raw("https://goo.gl/maps/A3n2Q")'>
                                900 Hennepin Ave <br />
                                Minneapolis, MN 55403
                            </a>
                        </div>
                        <div class="contact-info">
                            <a href="tel:6123380062">(612)&nbsp;338&#8209;0062</a> <br />
                            <a href="http://www.solera-restaurant.com/">website</a>
                        </div>
                    </div>
                </div>
            </div>

            @if (ViewBag.Invitee != null && ViewBag.Invitee.InvitedToRehearsal)
            {
                <div class="rehearsal-park col-sm-6 col-md-5 element">
                    <h3>Rehearsal &amp; Family Picnic</h3>

                    <p>
                        On Friday September 5th, we're combining our rehearsal dinner
                        with a picnic for our out-of-town family <span class="ampersand">&</span> friends.
                        We've reserved the &ldquo;Deer&rdquo; pavilion in Maple Grove's Elm Creek Park.
                        We'll setup at 5:00pm and shut down at 9:00pm.
                        There will be games, sand volleyball, and we're located right next to a
                        <a data-toggle="modal" data-target="#park-playground-image">large playground</a> for the kids.
                        Food and beverages will be provided.
                    </p>

                    <div class="row">
                        <div class="map-thumb">
                            <a data-toggle="modal" data-target="#park-map-image">
                                <img class="img-map-thumb" src="~/Images/park_map_thumb.jpg" alt="park map" />
                            </a>
                        </div>
                        <div class="info-box Xcol-xs-7">
                            <div class="address">
                                12400 James Deane Parkway, <br />
                                Maple Grove, MN 55369
                            </div>
                            <div class="contact-info">
                                <a href="http://www.threeriversparks.org/parks/elm-creek-park.aspx">website</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row second-row">
            <div class="hotel-meridien col-sm-6 col-md-5 col-md-offset-1 element">

                <h3>Hotel <span class="tilde">~</span> Le Meridien</h3>

                <p>
                    Le Meridien Chambers is an upscale hotel located directly across the street from the venue.
                    This is where Dave <span class="ampersand">&</span> Amy will be staying.
                    The room rate for our block is $179 ($203 after taxes/fees).
                    You can book a room in our block through a special website:
                    <a href="https://www.starwoodmeeting.com/StarGroupsWeb/booking/reservation?id=1402056434&key=6386A">Keast/Poyas Wedding booking site</a>,
                    or by calling (612)&nbsp;767&#8209;6900.
                </p>

                <div class="row">
                    <div class="map-thumb xcol-xs-5 xcol-xs-offset-1 xcol-sm-10 xcol-sm-offset-1 xcol-md-5">
                        <a href='@Html.Raw("https://goo.gl/maps/8t5KL")'>
                            <img class="img-map-thumb" src="~/Images/map_2.jpg" alt="" />
                        </a>
                    </div>
                    <div class="info-box Xcol-xs-7">
                        <div class="address">
                            <a href='@Html.Raw("https://goo.gl/maps/8t5KL")'>
                                901 Hennepin Avenue, <br />
                                Minneapolis, MN, 55403
                            </a>
                        </div>
                        <div class="contact-info">
                            <a href="tel:6127676900">(612)&nbsp;767&#8209;6900</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="hotel-doubletree col-sm-6 col-md-5 element">

                <h3>Hotel <span class="tilde">~</span> Doubletree</h3>

                <p>
                    Doubletree Suites is two blocks east and south of the venue.
                    Included in each suite is a kitchenette and pull-out couch.
                    The room rate for our block is $109 ($124 after taxes/fees).
                    You can book a room in our block through a special website:
                    <a href="http://doubletree.hilton.com/en/dt/groups/personalized/M/MSPLSDT-KPW-20140905/index.jhtml">Keast/Poyas Wedding booking site</a>,
                    or by calling (612)&nbsp;332&#8209;6800.
                </p>

                <div class="row">
                    <div class="map-thumb xcol-xs-5 xcol-xs-offset-1 xcol-sm-10 xcol-sm-offset-1 xcol-md-5">
                        <a href='@Html.Raw("https://goo.gl/maps/3TdzS")'>
                            <img class="img-map-thumb" src="~/Images/map_3.jpg" alt="" />
                        </a>
                    </div>
                    <div class="info-box Xcol-xs-7">
                        <div class="address">
                            <a href='@Html.Raw("https://goo.gl/maps/3TdzS")'>
                                1101 LaSalle Avenue <br />
                                Minneapolis, MN, 55403
                            </a>
                        </div>
                        <div class="contact-info">
                            <a href="tel:6123326800">(612)&nbsp;332&#8209;6800</a>
                        </div>
                    </div>
                </div>
            </div>

        </div> @* row end *@

                            <div id="park-map-image" class="modal fade modal-image-840" tabindex="-1" role="dialog">
                                <div class="modal-dialog" data-dismiss="modal">
                                    <div class="modal-content">
                                        <div class="modal-body">
                                            <img src="~/Images/park_map.png" class="img-responsive">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div id="park-playground-image" class="modal fade modal-image-840" tabindex="-1" role="dialog">
                                <div class="modal-dialog" data-dismiss="modal">
                                    <div class="modal-content">
                                        <div class="modal-body">
                                            <img src="~/Images/park_playground.jpg" class="img-responsive">
                                        </div>
                                    </div>
                                </div>
                            </div>

</div>
    <div class="bottomSpaceFiller">
    </div>
</div>
<!-- end: contact -->
